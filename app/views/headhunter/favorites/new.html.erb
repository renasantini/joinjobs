<div class="container">
  <h2 class="section-heading text-uppercase">Candidatos favoritos</h2>
  <h3 class="section-subheading text-muted">Adicionar novo candidato</h3>
</div>

<div class="form-group form-group-textarea mb-md-0">
  <%= form_with(model: @favorite, url: headhunter_profile_favorites_path, local: true) do |f| %>
    <div class="form-control">
      <%= f.hidden_field :headhunter_id, value: current_headhunter.id %>
      <%= f.hidden_field :profile_id, value: @profile.id %>
      <%= f.text_field :observations, placeholder: 'Observações', cols: 60, rols: 6, class: "form-control" %>
    </div>
    <div class="text-center">
      <button class="btn btn-primary btn-xl text-uppercase" type="submit">Confirmar</button>
  <% end %>
</div>
