<h1>Adicionar candidato aos favoritos</h1>

<div>
  <%= form_with(model: @favorite, url: headhunter_profile_favorites_path, local: true) do |f| %>
    <p>
      <%= f.hidden_field :headhunter_id, value: current_headhunter.id %>
      <%= f.hidden_field :profile_id, value: @profile.id %>
    </p>
    <p>
      <%= f.label :observations, 'Observações' %>
      <%= f.text_field :observations %>
    </p>
    <%= f.submit 'Confirmar' %>
  <% end %>
</div>
